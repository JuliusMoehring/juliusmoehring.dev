---
import { Footer } from '../components/Footer';
import { Header } from '../components/Header';
import { Main } from '../components/Main';

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" dir="ltr" class="h-full antialiased">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/assets/images/avatar.jpg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="flex h-full flex-col bg-black items-center max-l mx-auto">
        <Header client:load />

        <Main>
            <slot />
        </Main>

        <Footer />
    </body>
</html>
